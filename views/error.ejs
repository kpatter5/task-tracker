<% layout('layouts/boilerplate') %>

<div class="row justify-content-center">
  <div class="col-6">
    <div class="alert alert-danger" role="alert">
      <h4 class="alert-heading">
        <%= err.message %>
      </h4>
      <hr>
      <p>
        <% if (err.stack.length > 500) { %>
        <%= err.stack.substring(0, 500) %> ...
        <% } else { %>
        <%=err.stack %>
        <% } %>
      </p>
    </div>
  </div>
</div>